<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="de_sale_stock_pdf_report">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <h2 class="text-center">Sale Stock</h2>
                    <div class="row mt32">
                        <table class="table table-sm table-striped table-bordered">
                            <tr style="height:30%">
                                <th  align="center"><span style="display:inline-block;width:100px;min-width:100px;"><strong>From Date: </strong></span><span t-esc="data['start_date']" t-options="{'widget': 'date'}" /></th>
                                <th  align="center"><span style="display:inline-block;width:100px;min-width:100px;"><strong>To Date: </strong></span><span t-esc="data['end_date']" t-options="{'widget': 'date'}" /></th>
                            </tr>
                        </table>
                    </div>
                </div>
<!--                 <t t-set="tot_obal" t-value="0"/> -->
                <t t-set="tot_quantity" t-value="0"/>
                <t t-set="tot_weight" t-value="0"/>
<!--                 <t t-set="tot_location" t-value="0"/> -->
                <table class="table table-striped table-bordered" name="account_lines_table">
                    <thead class="thead-dark">
                        <tr class="table-active">
                            <th>Product</th>
                            <th>uom</th>
                            <th>Quantity In Hand</th>
                            <th>Weight In Hand</th>
                            <th>Location</th>
                        </tr>
                    </thead>
                    <tbody>
                       <tr t-foreach="dat" t-as="d" style="border-bottom:1px solid #000;">
<!--                            <t t-set="tot_obal" t-value="tot_obal+d['obal']"/> -->
                           <t t-set="tot_quantity" t-value="tot_quantity+d['quantity']"/>
                           <t t-set="tot_weight" t-value="tot_weight+d['weight']"/>
<!--                            <t t-set="tot_location" t-value="tot_location+d['location']"/> -->
                           <td>kg</td>
                           <td class="text-right"><t t-esc="'{0:,.2f}'.format(float(d['product']))" /></td>
                            <td class="text-right"><t t-esc="'{0:,.2f}'.format(float(d['quantity']))" /></td>
                            <td class="text-right"><t t-esc="'{0:,.2f}'.format(float(d['weight']))" /></td>
                            <td class="text-right"><t t-esc="'{0:,.2f}'.format(float(d['location']))" /></td>
 
                        </tr>
                        <tr>
                            <td><strong>Total</strong></td>
                            <td class="text-right"><strong></strong></td>
                            <td class="text-right"><strong><t t-esc="round(tot_quantity,2)" /></strong></td>
                            <td class="text-right"><strong><t t-esc="round(tot_weight,2)" /></strong></td>
<!--                             <td class="text-right"><strong><t t-esc="round(tot_cbal,2)" /></strong></td> -->
                            
                        </tr>

                    </tbody>
                  </table>
            </t>
        </t>
    </template>
</odoo>