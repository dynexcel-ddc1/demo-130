<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="sale_stock_wizard_report" model="ir.ui.view">
        <field name="name">sale.stock.wizard.report</field>
        <field name="model">sale.stock</field>
        <field name="arch" type="xml">
            <form string="Partner Balance">
                <group col="4">            
                        <field name="start_date"/>
                        <field name="end_date"/>                 
                        <field name="location_id"/>
<!--                        <field name="is_posted"/>-->
<!--                        <field name="category_id"/>               -->
                </group>

                <footer>
                    <button name="print_report" type="object" string="Print" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_stock_wizard" model="ir.actions.act_window">
        <field name="name">Sale Stock</field>
        <field name="res_model">sale.stock</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_sale_stock_report" name="Sale Stock" parent="account.account_reports_management_menu" action="action_sale_stock_wizard" sequence="150" />
</odoo>