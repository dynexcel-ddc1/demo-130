<odoo>
    <data>
        <record id="view_employee_form_inherit" model="ir.ui.view">
            <field name="name">view.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                     <button class="oe_stat_button" type="object" name="action_view_employee_kra_line" icon="fa-usd">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value"><field name="kra_total_score" /></span>
                            <span class="o_stat_text">KRA</span>
                        </div>
                    </button>
                    
                </xpath>
                
            </field>
        </record>
        
    </data>
</odoo>