<odoo>
  <data>    
         <record id="mrp_work_orders_wizard_view" model="ir.ui.view">
            <field name="name">mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
             <xpath expr="//button[@name='action_assign']" position="after">
                 <button name="button_plans" attrs="{'invisible': ['|', ('state', '!=', 'confirmed')]}" type="object" string="Plan b" class="oe_highlight"/> 
             </xpath>
    
            <xpath expr="//field[@name='routing_id']" position="after">
                        <field name="routing_s_id"/>
                        <field name="routing_t_id"/>
                        <field name="routing_fo_id"/>    
                        <field name="product_f_qty"/>
                        <field name="product_s_qty"/>
                        <field name="product_t_qty"/>
                        <field name="product_fo_qty"/>  
                       </xpath>
            </field>
        </record>    
    </data>
    </odoo>