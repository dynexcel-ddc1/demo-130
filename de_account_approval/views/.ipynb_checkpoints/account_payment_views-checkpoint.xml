<odoo>
  <data>
   <record id="approval_view_account_payment_form_inherit" model="ir.ui.view">
            <field name="name">approval.account.payment.form.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header//button[@name='post']" position="attributes">
                    <attribute name="states">manager_approved</attribute>
                </xpath>
                
                <xpath expr="//header" position="inside">
                    <button name="action_submit" string="Submit" type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    
                    <button name="action_approve_accountant" string="Approve" type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'waiting_approval')]}"/>
                    
                    <button name="action_approve_manager" string="Approve" type="object" states="accountant_approved" class="oe_highlight" />
                    
                    <button name="action_reject" string="Reject" type="object" states="waiting_approval,accountant_approved" class="oe_highlight"/>
                </xpath>
                
               
                
            </field>
        </record>
      
  </data>
</odoo>