<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="mrp_report_mrporder_inherit" inherit_id="mrp.report_mrporder">
        <xpath expr="/t/t/t/t/div/div[4]" position="inside">
            <div class="col-3">
                <strong>Weight:</strong><br/>
                <span t-field="o.weight"/> Kg
            </div>
            <div class="col-3">
                <strong>Weight to Produce:</strong><br/>
                <span t-field="o.total_weight"/> Kg
            </div>
        </xpath>
        <xpath expr="/t/t/t/t/div/table/thead/tr/th[2]" position="after">
            <th><span>Weight</span></th>
            <th><span>Total Weight</span></th>
        </xpath>
        <xpath expr="/t/t/t/t/div/table/tbody/t/tr/td[2]" position="after">
            <td><span t-field="raw_line.weight"/> Kg</td>
            <td><span t-field="raw_line.total_weight"/> Kg</td>
        </xpath>
    </template>
</odoo>