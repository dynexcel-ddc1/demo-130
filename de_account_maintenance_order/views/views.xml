<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
 		<record id="maintenance_order_form_view" model="ir.ui.view">
			<field name="name">maintenance.order.form.view</field>
			<field name="model">maintenance.order</field>
			<field name="inherit_id" ref="de_equipment_maintenance.maintenance_order_form_view"/>
			<field name="arch" type="xml">
                 <xpath expr="//button[@name='action_confirm']" position="after">
				   <button string="Record Expense" name="action_record_expense" type="object" states="done" class="oe_highlight"/>
				</xpath>
                <xpath expr="//field[@name='maintenance_request_id']" position="after">
					<field name="debit_account_id"/>
					<field name="credit_account_id"/>
					<field name="journal_id"/>

				</xpath>
                <xpath expr="//button[@name='put_in_pack']" position="before">
                  <group class="oe_subtotal_footer">
<!--                         <field name="amount_untaxed"/> -->
<!--                         <field name="amount_by_group" widget="tax-group-custom-field" nolabel="1" colspan="2"/> -->
                        <field name="amount_total" class="oe_subtotal_footer_separator"/>
<!--                         <field name="invoice_payments_widget" colspan="2" nolabel="1" widget="payment"/> -->
<!--                         <field name="amount_residual" class="oe_subtotal_footer_separator" attrs="{'invisible': [('state', '=', 'draft')]}"/> -->
                   </group>
                </xpath>

				<xpath expr="//field[@name='move_lines']//tree//field[@name='product_id']" position="after">
					<field name="account_id"/>
					<field name="price_unit"/>
					<field name="analytic_account_id"/>
                    <field name="analytic_tag_ids"/>
				</xpath>
				<xpath expr="//field[@name='move_lines']//tree//field[@name='de_quantity_done']" position="after">
					<field name="price_subtotal"/>
				</xpath>
			</field>
		</record> 
	</data>
</odoo>