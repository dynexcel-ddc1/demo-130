<odoo>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">view.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="is_sale_weight" invisible="1" />
            </field>
            
            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='price_unit']" position="after">
					<field name="weight" optional="show" />
                <field name="total_weight" optional="show" />
                <field name="price_weight" optional="show" />
				</xpath>
				<xpath expr="//field[@name='line_ids']//tree//field[@name='price_unit']" position="after">
					<field name="weight" optional="show" />
                <field name="total_weight" optional="show" />
                <field name="price_weight" optional="show" />
				</xpath>
            
        </field>
    </record>
    
     <record id="view_move_line_form_inherit" model="ir.ui.view">
        <field name="name">view.move.line.form.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <field name="quantity" position="after">
                <field name="weight" />
                <field name="total_weight" />
                <field name="price_weight" />
                <field name="price_qty_weight" />
            </field>
        </field>
    </record>
    
</odoo>