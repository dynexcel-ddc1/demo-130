<odoo>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">view.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="is_sale_weight" invisible="1" />
            </field>
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='invoice_line_ids']/tree[1]/field[@name='price_unit']" position="after">
                <field name="weight" optional="show" />
                <field name="total_weight" optional="show" />
                <field name="price_weight" optional="show" />
                
                <!--
                <field name="total_weight" optional="show" attrs="{'readonly': [['parent.is_sale_weight','!=',True]], 'required': [['parent.is_sale_weight','=',True]]}"/>
                
                <field name="price_weight" optional="show" attrs="{'readonly': [['parent.is_sale_weight','!=',True]], 'required': [['parent.is_sale_weight','=',True]]}"/>
-->
                
            </xpath>
        </field>
    </record>
</odoo>