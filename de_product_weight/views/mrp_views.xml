<odoo>
    <data>
        <record id="mrp_production_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.production.form.view.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_id']" position="before">
                <label for="weight"/>
                <div class="o_row no-gutters d-flex">
                    <div class="col">
                        <field name="weight" class="mr-1" />
                        <field name="total_weight" class="mr-1" attrs="{'readonly': [('state', '!=', 'done')]}"/>
                    </div>
                </div>
            </xpath>
			<xpath expr="//field[@name='qty_done']" position="after">
				<field name="weight"/>
				<field name="total_weight"/>
			</xpath>
        </field>
    </record>
    </data>
</odoo>