<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="purchase_register">
    <t t-call="web.html_container">
    <t t-call="web.external_layout">
        <t t-set="docs" t-value="docs.with_context()"/>
        <div class="page">
            <div class="oe_structure"/>
            <div align="center"> 
                <br/>                  
                <h2> Purchase Register</h2>
            </div>
            <br/>
            <table class="table table-condensed">
                <tr style="height:30%">
                    <th  align="center">From Date</th>
                    <th  align="center"><span t-field="docs.start_date"/></th>
                    <th  align="center">To Date</th>
                    <th  align="center"> <span t-field="docs.end_date"/></th>                  
                </tr>
            </table>
            <br/>
            <table class="table table-condensed">
                    <t t-set="qtysum" t-value="0"/>
                    <t t-set="exvaluesum" t-value="0"/>
                    <t t-set="totamountsum" t-value="0"/>
                <thead>
                    <tr>
                        <th style="border: 1px solid black" >DATE</th>
                        <th style="border: 1px solid black" >SUPPLIER NAME</th>
                        <th style="border: 1px solid black" >INVOICE NO</th>
                        <th style="border: 1px solid black" >ITEM NAME</th>
                        <th style="border: 1px solid black" >QUANTITY</th>
                        <th style="border: 1px solid black" >VALUE <br/>
                        EXC S.TAX
                        </th>
                        <th style="border: 1px solid black" >TAX</th>
                        <th style="border: 1px solid black" >VALUE
                          <br/>
                           INC S.TAX
                        </th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">
                    <t t-foreach="invoices" t-as="invoice">
                        <t t-if="invoice.product_id">
                        <tr>
                            <td style="border-bottom: 1px solid black"><span t-field="invoice.date"/></td>
                            <td style="border-bottom: 1px solid black"><span t-field="invoice.partner_id"/></td>
                            <td style="border-bottom: 1px solid black"><span t-field="invoice.move_id"/></td>
                            <td style="border-bottom: 1px solid black"><span t-field="invoice.product_id"/></td>
                            <td style="border-bottom: 1px solid black"><span t-field="invoice.quantity"/></td>
                            
                            <t t-set="qtysum" t-value="qtysum + invoice.quantity"/>

                            <td style="border-bottom: 1px solid black"><span t-field="invoice.debit"/></td>
                            
                            <t t-set="exvaluesum" t-value="exvaluesum + invoice.debit"/>

                           <td style="border-bottom: 1px solid black">
                            <t t-set="tottax" t-value="0"/>
                           
                              <table class="table table-striped table-sm table-bordered">
                            
                                 <t t-foreach="invoice.tax_ids" t-as="tax">
                                    <tr>
                                   
                                      <th>
                                         <t t-set="tottax" t-value="tottax + ((int(tax.amount) / 100) * invoice.debit)"/>
                                         <span t-field="tax.description"/>
                                      </th>
                                      <td>
                                          <span t-esc="round(((int(tax.amount) / 100) * invoice.debit),2)"/>
                                      </td>
                                        
                                     </tr>  
                                 </t>
                               </table>
                             </td>  
                            
                            <td style="border-bottom: 1px solid black">
                                    <span t-esc="invoice.debit + tottax"/>
                            </td>
                            
                            <t t-set="totamountsum" t-value="totamountsum + (invoice.debit + tottax)"/>

                           </tr>
                         </t>
		              </t>
                      <br/>
                      <br/>
                    
                     <tr>
                         <td style="border-top: 1px solid black"></td>
                         <td style="border-top: 1px solid black">Total Invoices</td>
                         <td style="border-top: 1px solid black">
                             
                             
                         </td> 
                         <td></td>
                         <td style="border-top: 1px solid black">
                                 <span t-esc="qtysum"></span> 

<!--                               <span t-esc="sum(line.quantity for line in invoices)"/> -->
                         </td> 
                         <td style="border-top: 1px solid black">
                                  <span t-esc="round(exvaluesum,2)"></span> 

<!--                                <span t-esc="sum(line.credit for line in invoices)"/> -->
                         </td> 
  
                         <td style="border-top: 1px solid black">
                             
                                 <span t-esc="tottax"></span> 
<!--                               <span t-esc="sum(line.credit for line in invoices)"/> -->
                         </td> 
                         <td style="border-top: 1px solid black">
                                    <span t-esc="round(totamountsum, 2)"></span> 

<!--                                 <span t-esc="sum(line.credit for line in invoices)"/> -->
                         </td> 
                         <td style="border-top: 1px solid black">
                             
                         </td>      
                    </tr>
                </tbody>
            </table>
            <br/>
            <br/>                  
<!--             <div>
                <strong>Total Outstanding Amount:
                    <span t-field="docs.total_amount_due"/>
                </strong>
            </div> -->
        </div>
    </t>
    </t>
</template>
</odoo>
