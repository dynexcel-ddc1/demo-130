<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="sale_register">
    <t t-call="web.html_container">
    <t t-call="web.external_layout">
        <t t-set="docs" t-value="docs.with_context()"/>
        <div class="page">
            <div class="oe_structure"/>
            <div align="center"> 
                <br/>                  
                <h2> Sale Register</h2>
            </div>
            <br/>
            <table  class="table table-condensed">
                <tr style="height:30%">
                    <th  align="center">From Date</th>
                    <td  align="center"><span t-field="docs.start_date"/></td>
                    <th  align="center">To Date</th>
                    <td  align="center"> <span t-field="docs.end_date"/></td>                  
                </tr>
            </table>
            
            <table class="table table-striped table-sm table-bordered">
                    <t t-set="qty" t-value="0"/>
                    <t t-set="exvalue" t-value="0"/>
                    <t t-set="totamount" t-value="0"/>



                <thead>
                    <tr>
                        <th style="border: 1px solid black" >INV NO</th>
                        <th style="border: 1px solid black" >DATE</th>
                        <th style="border: 1px solid black" >ITEM NAME</th>
                        <th style="border: 1px solid black" >QUANTITY</th>
                        <th style="border: 1px solid black" >EX- <br/>
                        VALUE
                        </th>
                        <th style="border: 1px solid black" >TAX</th>
                        <th style="border: 1px solid black" >TOTAL AMOUNT</th>
                        <th style="border: 1px solid black" >PARTY NAME ADDRESS</th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">
                    <t t-foreach="invoices" t-as="invoice">
                        <t t-if="invoice.product_id">
                        <tr>
                            <td><span t-field="invoice.move_id"/></td>
                            <td><span t-field="invoice.date"/></td>
                            <td><span t-field="invoice.product_id"/></td>
                            <td><span t-field="invoice.quantity"/></td>
                            
                            <t t-set="qty" t-value="qty + invoice.quantity"/>

                            <td><span t-field="invoice.credit"/></td>
                            
                            <t t-set="exvalue" t-value="exvalue + invoice.credit"/>

                            
<!--                             <t t-foreach="self.env['account.tax'].search()" t-as="t">
                                 <t t-if="type_by_use='sale'">
                                 </t>
                                 </t>     -->
                            
                            <t t-set="tottax" t-value="0"/>
                            <td>
                                <table class="table table-striped table-sm table-bordered">
                                    <t t-foreach="invoice.tax_ids" t-as="tax">
                                <tr>
                                    <th>
                                        <t t-set="tottax" t-value="tottax + ((int(tax.amount) / 100) * invoice.credit)"/>
                                        <span t-field="tax.description"/>
                                    </th>

                                    <td>
                                      <span t-esc="round(((int(tax.amount) / 100) * invoice.credit),2)"/>
                                    </td>
                                    </tr>
                               
                            </t>
                            </table>
                            </td>
                            <td><span t-esc="invoice.credit + tottax"/></td>  
                            
                              <t t-set="totamount" t-value="totamount + (invoice.credit + tottax)"/>

                            
                                <td><span t-field="invoice.partner_id"/></td>
                            
                        </tr>
                        </t>
		             </t>
                    <br/>
                    <br/>                     
              </tbody>             
            </table>
            <table class="table table-condensed  table-striped table-sm table-bordered">
                    <tr>
                         <td style="border-top: 1px solid black"></td>
                         <td style="border-top: 1px solid black">Total Invoices</td>
                         <td style="border-top: 1px solid black">
                             
                             
                         </td> 
                        <td style="border-top: 1px solid black"></td>
                         <td style="border-top: 1px solid black">
                                 <span t-esc="qty"></span> 

<!--                               <span t-esc="sum(line.quantity for line in invoices)"/> -->
                         </td> 
                         <td style="border-top: 1px solid black">
                                  <span t-esc="round(exvalue,2)"></span> 

<!--                                <span t-esc="sum(line.credit for line in invoices)"/> -->
                         </td> 
  
                         <td style="border-top: 1px solid black">
                                   <span t-esc="tottax"></span> 

<!--                               <span t-esc="sum(line.credit for line in invoices)"/> -->
                         </td> 
                         <td style="border-top: 1px solid black">
                                    <span t-esc="round(totamount,2)"></span> 

<!--                                 <span t-esc="sum(line.credit for line in invoices)"/> -->
                         </td> 
                         <td style="border-top: 1px solid black"> </td> 

                        
                    </tr>  
            </table>    
            
            <br/>
            <br/> 
            
<!--             <div> 
                <strong>Total Outstanding Amount:
                    <span t-field="docs.total_amount_due"/>
                </strong> -->
<!--             </div> -->
        </div>
    </t>
    </t>
</template>
</odoo>
