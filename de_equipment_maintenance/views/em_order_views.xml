       <!-- Job Order Sheet Action View -->
    <record id="action_maintenance_order" model="ir.actions.act_window">
        <field name="name">Maintenance Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">maintenance.order</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
                Create a new maintenance Order, the first step of a maintenance!
            </p>
            <p>
                Once the Order is confirmed, it becomes a maintenance order.<br/> 
            </p>
        </field>
