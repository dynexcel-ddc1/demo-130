<odoo>
  <data>
      <!-- maintenance order Tree-->
    <record id="maintenance_order_list_view" model="ir.ui.view">
        <field name="name">maintenance.order.list.view</field>
        <field name="model">maintenance.order</field>
        <field name="arch" type="xml">
            <tree string="Maintenance Order">
                <field name="name"/>
                <field name="date_order"/>
                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
      
    <!-- maintenance Form -->
    <record id="maintenance_order_form_view" model="ir.ui.view">
        <field name="name">maintenance.order.form.view</field>
        <field name="model">maintenance.order</field>
        <field name="arch" type="xml">
            <form string="Repair Order">
                <header>
                    <button string="Confirm" name="action_confirm" type="object" states="draft" class=""/>
                    <button string="Start Repair" name="action_start_repair" type="object" states="confirm" class="oe_highlight"/>
                    <button string="End Repair" name="action_end_repair" type="object" states="inprocess" class="oe_highlight"/>
                    <button string="Cancel" name="action_cancel" states="draft" type="object"/>
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,inprocess,repaired,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" /></h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="analytic_account_id"/>
                        </group>
                        <group>
                        <field name="date_order" attrs="{'invisible': [('state', 'in', ['sale', 'done', 'cancel'])]}"/>
                        <field name="schedule_start_date"/>
                        <field name="schedule_end_date"/>
                        <field name="date_closed"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Add a description..."/>
                        </page>
                        
                        <page string="Parts">
                            <field name="maintenance_part_ids" widget="one2many_list">
                                <tree string="Maintenance Parts" editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_uom_qty"/>
                                    <field name="product_uom_id"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Services">
                            <field name="maintenance_service_ids" widget="one2many_list">
                                <tree string="External Services" editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_uom_qty"/>
                                    <field name="product_uom_id"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Miscellaneous">
                            <group>
                                <group>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="maintenance_request_id"/>
                                </group>
                                <group string="">
                                    <field name="picking_type_id"/>
                                    <field name="location_src_id"/>
                                    <field name="location_dest_id"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
      
      
