<odoo>
    <record id="ticket_view_form_inherit" model="ir.ui.view">
        <field name="name">ticket.view.form.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="de_helpdesk.ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='description']" position="after">
                <page name="site_information" string="Site Information">
                    <group>
                        <group string="Site">
                            <field name="site_name"/>
                            <field name="contact_name"/>
                            <field name="site_address"/>
                            <field name="region"/>
                            <field name="city"/>
                        </group>
                        <group string="Material">
                            <field name="material"/>
                            <field name="barcode"/>
                            <field name="model"/>
                        </group>
                    </group>
                    
                </page>
            </xpath>
            
        </field>
    </record>
</odoo>