<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.module.category" id="sale_order_approval">
        <field name="name"> Sale Order Approval</field>
        <field name="description">Category For Sale Order</field>
        <field name="sequence">45</field>
    </record>

    <record model="res.groups" id="group_sales_person">
        <field name="name">Sales Person</field>
        <field name="category_id" ref="sale_order_approval"/>
    </record>

    <record model="res.groups" id="group_sales_manager">
        <field name="name">Manager</field>
        <field name="category_id" ref="sale_order_approval"/>
    </record>

    <record model="ir.rule" id="rule_manager_sale_order_approval">
        <field name="name">Approve Sale Orders</field>
        <field name="model_id" ref="model_sale_order"/>
        <field name="domain_force">[('user_id.name', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_sales_manager'))]"/>
    </record>

    <record model="ir.rule" id="rule_sale_person">
        <field name="name">Can't Approve Sale Orders</field>
        <field name="model_id" ref="model_sale_order"/>
        <field name="domain_force">[('user_id.name', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_sales_person'))]"/>
    </record>
</odoo>