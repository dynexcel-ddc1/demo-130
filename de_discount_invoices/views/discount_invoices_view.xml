<odoo>

      <record id="view_discount_invoices_form" model="ir.ui.view">
                <field name="name">discount.invoices.form</field>
                <field name="model">account.move</field>
                <field name="inherit_id" ref="account.view_move_form"/>
                <field name="arch" type="xml">

                    <xpath expr="//group/field[@name='amount_untaxed']" position="after">
                        <field name="discount"/>
                        
                    </xpath>

                    <xpath expr="//field[@name='amount_total']" position="after">
                        <field name="total_disc"  class="oe_subtotal_footer_separator"/>
                    </xpath>

                    <xpath expr="//field[@name='amount_total']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>

                </field>
       </record>
    <record id="view_discount_invoices_tree" model="ir.ui.view">
                <field name="name">discount.invoices.tree</field>
                <field name="model">account.move</field>
                <field name="inherit_id" ref="account.view_invoice_tree"/>
                <field name="arch" type="xml">

                    <xpath expr="//tree/field[@name='amount_tax_signed']" position="after">
                        <field name="total_disc" string="Total" sum="Total"/>

                    </xpath>

                </field>
       </record>
</odoo>
