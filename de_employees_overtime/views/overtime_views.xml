<odoo>
  <data>
   
   <record id="hr_employee_department_form_view" model="ir.ui.view">
			<field name="name">hr.department.form.view.inherit</field>
			<field name="model">hr.department</field>
			<field name="inherit_id" ref="hr.view_department_form"/>
			<field name="arch" type="xml">
                <xpath expr="//field[@name='manager_id']" position="after">					
                      <field name="allow_overtime"/>
				</xpath>      
            </field>
		</record>   
      
    <record id="hr_employee_form_view" model="ir.ui.view">
			<field name="name">hr.employee.form.view.inherit</field>
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="hr.view_employee_form"/>
			<field name="arch" type="xml">
                <xpath expr="//field[@name='department_id']" position="after">					
                      <field name="allow_overtime"/>
				</xpath>      
            </field>
		</record>
      
      
      <record model="ir.ui.view" id="hr_employee_overtime_tree_view">
            <field name="name">hr.employee.overtime.tree</field>
            <field name="model">hr.employee.overtime</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="check_in"/>
                    <field name="check_out"/>
                    <field name="total_hours"/>
                    <field name="overtime_hours"/>
                    <field name="state"/>

                </tree>
            </field>
        </record>
      
      <record model="ir.ui.view" id="hr_employee_overtime_form_view">
            <field name="name">hr.employee.overtime.form</field>
            <field name="model">hr.employee.overtime</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_send_email" states="draft" class="oe_highlight" string="Send Request" type="object"/>
                        <button name="action_send_email_approve" class="oe_highlight" states="to_approve" string="Approve Request" type="object"/>
                        <button name="action_send_email_reject" class="oe_highlight" states="approved" string="Reject Request" type="object"/>
                        <button name="action_send_email_confirm" class="oe_highlight" states="approved" string="Confirm" type="object"/>
                        <button name="action_paid" states="hrconfirm" class="oe_highlight" string="Paid" type="object"/>

<!--                         <button name="action_close_case" states="waiting,response" class="oe_highlight" string="Close Case" type="object"/>
 -->
                        <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,refused,approved,paid,close"/>
                    </header>
                    <sheet>
<!--                          <div class="oe_button_box" name="button_box">
                            <button type="object" name="payment_button" string='Payment' class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible':['|', ('state', '!=', 'paid')]}"> -->
<!--                             <field name="invoice_count" widget="statinfo" string="Vendor Bills"/> -->
<!--                             <field name="invoice_ids" invisible="1"/> -->
<!--                         </button>
                    </div> -->
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                                <field name="check_in" />
                                <field name="check_out" />
                                
                            </group>
                            <group>
                                <field name="total_hours"/>
                                <field name="overtime_hours" />
                               

                            </group>
                        </group>    
                    </sheet>
<!--                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div> -->
                </form>
            </field>
        </record>
      
   <record id="overtime_menu_action" model="ir.actions.act_window">
        <field name="name">Overtime</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee.overtime</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a New Overtime 
            </p>
        </field>
    </record>
      
    <menuitem name="Overtime" id="overtime_main_menu" parent="hr_attendance.menu_hr_attendance_root" sequence="3"/>
    <menuitem name="Overtime" id="overtime_sub_menu" parent="overtime_main_menu" action="overtime_menu_action" sequence="1"/>
  </data>
</odoo>