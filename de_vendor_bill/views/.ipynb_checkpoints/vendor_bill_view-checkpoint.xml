<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inherit_vendor_bill_form_view" model="ir.ui.view">
            <field name="name">inherit.vendor.bill.form.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header" position="inside">
                    <button name="send_approval" class="oe_highlight"  string="Send For Approval" type="object" attrs="{'invisible': ['|',('state', '!=', 'draft'), ('purchase_id','!=', False)]}"/>
                    <button name="approve_bill" class="oe_highlight" states="waiting" groups="de_vendor_bill.group_waiting_for_approval" string="Approve" type="object"
                    />
                </xpath>
                <xpath expr="//header/button[@name='action_post']" position="replace">
                           
                                                <button name="action_post" string="Post" class="oe_highlight" type="object" groups="account.group_account_invoice" attrs="{'invisible': ['|',('state', '!=', 'draft'),('purchase_id','=', False)]}"/>

                </xpath>          
                <xpath expr="//header/button[@name='action_post']" position="after">
                    <button name="action_post" class="oe_highlight" states="approved" string="Post" type="object"
                     />
                </xpath>


