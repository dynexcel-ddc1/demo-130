<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
            <record id="send_whatsapp_invoices" model="mail.template">
            <field name="name">Send Whatsapp Message</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
<!--            <field name="email_from">${(object.invoice_user_id.email_formatted or user.email_formatted) |safe}</field>-->
<!--            <field name="partner_to">${object.partner_id.id}</field>-->
            <field name="subject">${object.name} Invoice (Ref ${object.name or 'n/a'})</field>
<!--                # company_id.-->
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Delivery id
                            ${object.name}
                        <br /><br />
                           Operation type ${object.picking_type_id}
                        <br /><br />
                           Operation type ${object.warehouse_transfer_id}
                        <br /><br />
                        Do not hesitate to contact us if you have any questions.
                    </p>
                </div>
            </field>
            <field name="report_template" ref="stock.action_label_transfer_template_pdf"/>
            <field name="report_name">Invoice_${(object.name)}</field>
        </record>
    </data>
</odoo>