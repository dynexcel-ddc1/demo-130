<odoo>
  <data>
    <record id="view_task_form2_inherit" model="ir.ui.view">
            <field name="name">view.task.form2.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="replace">
                    <field name="user_id" class="o_task_user_field" groups="de_project_task_security.group_project_scrum_team" readonly="1" options="{&quot;no_open&quot;: True}"/>
                    <field name="user_id" class="o_task_user_field" groups="de_project_task_security.group_project_scrum_master" options="{&quot;no_open&quot;: True}"/>
                </xpath>
                
                <xpath expr="//field[@name='date_deadline']" position="replace">
                    <field name="date_deadline" groups="de_project_task_security.group_project_scrum_team" readonly="1" />
                    <field name="date_deadline" groups="de_project_task_security.group_project_scrum_master" />
                </xpath>
                
                <xpath expr="//field[@name='description']" position="replace">
                    <field name="description" groups="de_project_task_security.group_project_scrum_team" readonly="1" />
                    <field name="description" groups="de_project_task_security.group_project_scrum_master" />
                </xpath>
                
        </field>
      </record>
      
      <record id="view_task_form2_inherited2" model="ir.ui.view">
            <field name="name">view.task.form2.inherited2</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
            <field name="arch" type="xml">
                
                
                <xpath expr="//field[@name='planned_hours']" position="replace">
                    <field name="planned_hours" widget="float_time" groups="de_project_task_security.group_project_scrum_team" readonly="1" />
                    <field name="planned_hours" widget="float_time" groups="de_project_task_security.group_project_scrum_master" />
                </xpath>
                
               
                
        </field>
      </record>
      
  </data>
</odoo>