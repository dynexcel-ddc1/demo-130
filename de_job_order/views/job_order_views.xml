<odoo>
    <menuitem id="menu_job_order" name="Job Order" parent="sale.sale_menu_root" sequence="2"/>
    <!-- Job Sheet Form View -->
    <record id="job_order_sheet_form_view" model="ir.ui.view">
        <field name="name">job.order.sheet.form.view</field>
        <field name="model">job.order</field>
        <field name="arch" type="xml">
            <form string="Job Order">
                <header>
                    <field name="state" widget="statusbar" nolabel="1" statusbar_visible="draft,confirm,process"/>
                    <button name="action_confirm" class="oe_highlight" states="draft" string="Confirm" type="object"/>
                    <button name="action_cancel" states="validated,draft" string="Cancel" type="object"/>
                    <button string="Generate Sale Lines" name="generate_sale_lines" type="object" states="draft" class="oe_highlight"/>
                    <button string="Compute Job" name="compute_job" type="object" states="confirm" class="oe_highlight"/>
                    
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" readonly="1" force_save="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="date_order"/>
                        </group>
                        <group>
                            <field name="sale_id"/>
                            <field name="struct_id"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="note"/>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="job_order_sale_lines" widget="one2many_list">
                                <tree string="Order lines" editable="bottom">
                                    <field name="sale_line_id"/>
                                    <field name="code"/>
                                    <field name="product_tmpl_id" context="{'default_type': 'product'}"/>
                                    <field name="product_id" groups="product.group_product_variant" context="{'default_type': 'product'}"/>
                                    <field name="product_uom"/>
                                    <field name="product_uom_qty"/>
                                    <field name="struct_id"/>

                                </tree>
                            </field>
                        </page>
                        
                        <page string="Job Compute Items">
                            <field name="job_order_lines" widget="one2many_list">
                                <tree string="Job Order Rule lines" editable="bottom">
                                    <field name="job_sale_line_id"/>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="sequence"/>
                                    <field name="category_id"/>
                                    <field name="job_rule_id"/>
                                    <field name="line_desc"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Details by Component">
                        </page>
                        <page string="Details by Category">
                            <field name="details_by_component_category" context="{'group_by':'category_id'}" domain="[('appears_on_sheet', '=', True)]">
                                <tree string="Category Lines" decoration-info="quantity == 0">
                                    <field name="category_id"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Job Order Tree View -->
    <record id="job_order_sheet_tree_view" model="ir.ui.view">
        <field name="name">job.order.sheet.tree.view</field>
        <field name="model">job.order</field>
        <field name="arch" type="xml">
            <tree string="Job Order">
                <field name="name"/>
                <field name="date_order"/>
                <field name="struct_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <!-- Job Order Sheet Action View -->
    <record id="action_job_order" model="ir.actions.act_window">
        <field name="name">Job Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">job.order</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click here to create a new Job Order
          </p>
        </field>
    </record>
    
    
    <menuitem id="job_order_sheet_menu" name="Job Order" parent="menu_job_order" action="action_job_order" sequence="1"/>
</odoo>