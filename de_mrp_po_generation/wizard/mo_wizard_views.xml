<odoo>
  <data>
      
      <record id="mo_before_menu_wizard_form" model="ir.ui.view">
            <field name="name">mrp.mo.beforehand.wizard.form</field>
            <field name="model">mrp.mo.beforehand.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_share" type="object" string="Compute" class="oe_highlight"/>
                    </header>
                    <group>
                        <group>
                            <field name="mrp_id" widget="many2many_tags"/>
<!--                             <field name="expense_accrual_account" string="Accrued Account"
                                   attrs="{'invisible': [('account_type', '!=', 'expense')], 'required': [('account_type', '=', 'expense')]}"/>
                            <field name="revenue_accrual_account" string="Accrued Account"
                                   attrs="{'invisible': [('account_type', '!=', 'income')], 'required': [('account_type', '=', 'income')]}"/> -->
                        </group>
                        <group>
<!--                             <field name="percentage" string="Percent (%)"/>
                            <field name="total_amount" string="Amount"/>
                            <field name="journal_id"/> -->
                        </group>
                    </group>
                    <notebook>
                        <page string="Components">
                            <field name="mo_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="product_uom_qty"/>
                                        <field name="on_hand_qty"/>
                                        <field name="forcast_qty"/>
                                    </tree>
                                </field>
                        </page>    
                    </notebook>    
                    <footer>
                        <button string="Create PO" name="amend_entries" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="mo_before_menu_wizard_action" model="ir.actions.act_window">
            <field name="name">Create PO from MOs</field>
            <field name="res_model">mrp.mo.beforehand.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
   
      
      <menuitem name="MOs Beforehand" id="mos_beforehand_menu" parent="mrp.menu_mrp_manufacturing" action="mo_before_menu_wizard_action" sequence="3"/>
  </data>
</odoo>